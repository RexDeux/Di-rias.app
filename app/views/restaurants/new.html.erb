<h1>Adicionar Novo Restaurante</h1>

<%= simple_form_for @restaurant do |f| %>
  <div class="form-group">
    <%= f.input :name, required: true, placeholder: "Restaurant Name" %>
  </div>

  <div class="form-group">
    <%= f.input :address, required: true, placeholder: "Address" %>
  </div>

  <div class="form-group">
    <%= f.input :city, required: true, placeholder: "City" %>
  </div>

  <div class="form-group">
    <%= f.input :image, as: :file, required: true %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Restaurant", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to Restaurants', restaurants_path, class: 'btn btn-secondary' %>
