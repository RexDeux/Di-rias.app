<h1>Manage Users</h1>
<p>Welcome to the Admin Dashboard, <%= current_user.email %>!</p>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Admin</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'Yes' : 'No' %></td>
        <td>
          <%= link_to 'Edit', edit_admin_user_path(user) %> |
          <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <%= link_to 'Manage Users', admin_users_path %>
</table>
