<!-- app/views/admin/users/_form.html.erb -->
<%= form_for(@user, url: admin_user_path(@user)) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :restaurant_id, "Assign Restaurant" %>
  <%= f.collection_select :restaurant_id, @restaurants, :id, :name, include_blank: true %>

  <%= f.submit "Update User", class: "button" %>
<% end %>
